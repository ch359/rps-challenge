Player 1: <%= @player_one_name %>
Player 2: <%= @player_two_name %>

<h2> <%= @player_one_name %>, choose your weapon! </h2>
<h3>( <%= @player_two_name %>, please look away! )</h3>

<div>
  <form action="/player_1" method="post">
    <input type="submit" name="p1_weapon" value="Rock">
    <input type="submit" name="p1_weapon" value="Paper">
    <input type="submit" name="p1_weapon" value="Scissors">
  </form>
</div>

<% if @player_one_weapon %>
  <div><%= @player_one_name %> has chosen <%= @player_one_weapon %>!</div>
  <div>
    <form action="/player_2" method="post">
      <input type="submit" value="Submit">
    </form>
  </div>
<% end %>

